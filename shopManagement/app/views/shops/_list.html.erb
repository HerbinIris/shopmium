<%# app/views/shops/_list.html.erb %>
<div id="filterrific_results">
  <div>
    <%= page_entries_info shops%>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Chain</th>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.chain %></td>
          <td><%= shop.name %></td>
          <td><%= link_to 'Show', shop %></td>
          <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
          <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate shops%>
